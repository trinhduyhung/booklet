<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javaspace.booklet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Booklet">

        <activity
            android:name=".BooksActivity"
            android:exported="true"
            android:label="@string/activity_books">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddBookActivity"
            android:label="@string/activity_add_book" />

        <activity
            android:name=".BookDetailActivity"
            android:label="@string/activity_book_detail" />

        <activity
            android:name=".EditBookActivity"
            android:label="@string/activity_edit_book" />

    </application>


</manifest>