<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_item_parent"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/img_item_cover"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/spring_in_action" />

    <TextView
        android:id="@+id/txt_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_item_cover"
        android:textStyle="bold"
        tools:text="Spring in Action" />

    <TextView
        android:id="@+id/txt_item_author_edition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/img_item_cover"
        tools:text="Craig Walls, Sixth Edition" />

    <TextView
        android:id="@+id/txt_item_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_author_edition"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/img_item_cover"
        tools:text="Publisher Manning" />

    <TextView
        android:id="@+id/txt_item_published_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_publisher"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/img_item_cover"
        tools:text="Published: 2018" />

    <TextView
        android:id="@+id/txt_item_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_item_cover"
        android:layout_below="@id/txt_item_published_year"
        android:textAllCaps="true"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        tools:text="READING" />
</RelativeLayout>