<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_book_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/img_book_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_book_cover"
        tools:text="Spring in Action"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_book_author_edition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_book_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/img_book_cover"
        tools:text="Craig Walls, Sixth Edition" />

    <TextView
        android:id="@+id/txt_book_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_book_author_edition"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/img_book_cover"
        tools:text="600 pages long" />

    <TextView
        android:id="@+id/txt_book_published_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_book_pages"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/img_book_cover"
        tools:text="Published in 2020" />

    <TextView
        android:id="@+id/txt_book_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_book_published_year"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_book_cover"
        android:textAllCaps="true"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        tools:text="I am reading" />

    <TextView
        android:id="@+id/txt_book_started_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_book_status"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_book_cover"
        android:text="Started on Nov 28 2021"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_book_finished_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_book_started_date"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_book_cover"
        android:text="Ended on Nov 28 2021"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_book_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_book_cover"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@id/img_book_cover"
        tools:text="Spring in Action, 5th Edition is the fully updated revision of Manning's bestselling Spring in Action. This new edition includes all Spring 5.0 updates, along with new examples on reactive programming, Spring WebFlux, and microservices. You'll also find the latest Spring best practices, including Spring Boot for application setup and configuration." />

</RelativeLayout>